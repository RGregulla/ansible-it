# Systemd unit file for default tomcat
#
# To create clones of this service:
# DO NOTHING, use tomcat@.service instead.

[Unit]
Description=Apache Tomcat Web Application Container
After=syslog.target network.target

[Service]
Type=simple
#Type=forking

User={{ sm_service_user }}
Group={{ sm_service_group }}

WorkingDirectory={{ sm_server_run_dir }}

#Environment="JAVA_HOME={{ sm_server_run_dir }}/jre"

ExecStart={{ sm_server_run_dir }}/smstart
ExecStop={{ sm_server_run_dir }}/smstop

[Install]
WantedBy=multi-user.target
